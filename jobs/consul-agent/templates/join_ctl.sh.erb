#!/bin/bash -e
# vim: set ft=sh

RUN_DIR=/var/vcap/sys/run/consul-agent

PKG=/var/vcap/packages/consul_0.3
PIDFILE=${RUN_DIR}/consul-join.pid

mkdir -p /var/vcap/sys/log/monit
exec 1>> /var/vcap/sys/log/monit/consul-join.out.log
exec 2>> /var/vcap/sys/log/monit/consul-join.err.log

case $1 in
  start)
    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    echo $$ > $PIDFILE

    while true; do
      <% if p("consul.agent.mode") != "server" && !p("consul.agent.servers.lan").empty? %>
        $PKG/bin/consul join <%= p("consul.agent.servers.lan").join(" ") %>
      <% end %>

      <% if p("consul.agent.mode") == "server" && !p("consul.agent.servers.wan").empty? %>
        $PKG/bin/consul join -wan <%= p("consul.agent.servers.wan").join(" ") %>
      <% end %>

      sleep 10
    done

    ;;

  stop)
    kill $(cat $PIDFILE)

    ;;

  *)
    echo "Usage: $0 {start|stop}"
    ;;
esac
