  blackbox.destination.address:
    description: "address for syslog drain (incuding port)"

  blackbox.destination.transport:
    description: "transport protocol for syslog drain (udp/tcp)"
    default: udp

  blackbox.sources:
    description: "array of hashes containing file path and tag"
    default: []