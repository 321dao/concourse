#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/winston
LOG_DIR=/var/vcap/sys/log/winston
PIDFILE=$RUN_DIR/winston.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "winston"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > /var/vcap/sys/run/winston/winston.pid

    <% my_ip = spec.networks.send(p("network_name")).ip %>

    exec /var/vcap/packages/winston/bin/winston \
      -listenAddr=<%= p("winston.listen_address") %> \
      -apiListenAddr=<%= p("winston.api_listen_address") %> \
      -peerURL=http://<%= my_ip %>:<%= p("winston.api_listen_address").split(":").last %> \
      -proleURL=http://<%= p("winston.prole.address") %> \
      -redisAddr=<%= p("winston.redis.address") %> \
      -config=/var/vcap/jobs/winston/config/winston.yml \
      1>>$LOG_DIR/winston.stdout.log \
      2>>$LOG_DIR/winston.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: winston_ctl {start|stop}"

    ;;

esac
