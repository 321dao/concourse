#!/bin/bash

set -e

<%
  require "cgi"
  require "shellwords"

  def esc(x)
    Shellwords.shellescape(x)
  end
%>

RUN_DIR=/var/vcap/sys/run/groundcrew
LOG_DIR=/var/vcap/sys/log/groundcrew
PIDFILE=$RUN_DIR/jettison.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

<%
  garden_node = link("garden").first
  garden_addr = "#{garden_node.address}:#{garden_node.p("port")}"
%>

case $1 in

  start)
    pid_guard $PIDFILE "jettison"

    mkdir -p $RUN_DIR
    chown -R vcap:vcap $RUN_DIR

    mkdir -p $LOG_DIR
    chown -R vcap:vcap $LOG_DIR

    echo $$ > $PIDFILE

    kill -STOP $$

    rm $PIDFILE

    ;;

  stop)
  <% unless p("groundcrew.garden.forward_address", nil) %> \
    /var/vcap/packages/jettison/bin/jettison \
      -gardenAddr=<%= garden_addr %> \
      -yellerAPIKey=<%= esc(p("groundcrew.yeller.api_key")) %> \
      -yellerEnvironment=<%= esc(p("groundcrew.yeller.environment_name")) %> \
      1>>$LOG_DIR/jettison.stdout.log \
      2>>$LOG_DIR/jettison.stderr.log
  <% end %>

    kill -CONT $(cat $PIDFILE)

    ;;

  *)
    echo "Usage: $0 {start|stop}"

    ;;

esac
