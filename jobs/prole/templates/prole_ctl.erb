#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/prole
LOG_DIR=/var/vcap/sys/log/prole
PIDFILE=$RUN_DIR/prole.pid

source /var/vcap/packages/pid_utils/pid_utils.sh

case $1 in

  start)
    pid_guard $PIDFILE "prole"

    mkdir -p $RUN_DIR
    mkdir -p $LOG_DIR

    echo $$ > /var/vcap/sys/run/prole/prole.pid

    <% my_ip = spec.networks.send(p("network_name")).ip %>

    exec /var/vcap/packages/prole/bin/prole \
      -listenAddr=<%= p("prole.listen_address") %> \
      -peerAddr=<%= my_ip %>:<%= p("prole.listen_address").split(":").last %> \
      -wardenNetwork=<%= p("prole.warden.network") %> \
      -wardenAddr=<%= p("prole.warden.address") %> \
      1>>$LOG_DIR/prole.stdout.log \
      2>>$LOG_DIR/prole.stderr.log

    ;;

  stop)
    kill_and_wait $PIDFILE

    ;;

  *)
    echo "Usage: prole_ctl {start|stop}"

    ;;

esac
